<ion-view hide-nav-bar="true" view-title="" >
	<style type="text/css">
	.guanyuiconfooter{
	background-size: 0;
	}
	.guanyuneirong{
	padding: 20px;
	}
	.guanyufootdiv{
	height:auto;
	background: #b2b2b2;
	opacity: 0.5;
	text-align: center;
	position: absolute; 
	display: block;
	}
	.guanyuh4{
	text-align: center;
	}
	.img-Icon{
	width: 20%;
	box-sizing:border-box;
	border: 1px solid #ddd;
	margin: 2%;
	float:left;
	height: 67.5px;
      }
      .popup-body span{
      text-align: -webkit-center;
    width: 100%;
    margin: 7px auto;
    display: inline-block;
    }
    .popup-head{
    background-color: #18b4ed;}
    .popup-head h3{
    color: #fff;
    font-size: 16px;
    }
    .tucaoaddimg{
    text-align: center;
    width: 20%;
    float: left;
    background: #ddd;
    margin:2%;
    height: auto;
    vertical-align: -webkit-baseline-middle;
    overflow: hidden;
    padding: 10.5px 10.5px 7px 10.5px;
    }
    .margindiv{
    margin-top: 47px;
    }
    /**上一页下一页样式*/
    .shangyiye{
    font-size: 5em;
    text-align: center;
    color: white;
    }
    /**预览图片div*/
    .tcyulanimg{
    text-align: center;
    align-items: center;
    vertical-align: middle;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
    margin-top: -10px;
    }
    /**预览删除**/
    .yulandelete{
    font-size: 2em;
    color: white;
    padding: 5px;
    position: fixed;
    right: 10px;
    margin-top: -5px;
    }
    /**预览返回**/
    .yulanback{
    font-size: 2em;
    color: white;
    padding: 5px;
    margin: 10px;
    }
	</style>
	<ion-nav-buttons side="left">
        <div style="text-align: center;height: 100%">
            <button class="button button-clear icon ion-chevron-left" ng-click="goBack()">
            </button>
        </div>
    </ion-nav-buttons>
    <ion-nav-buttons side="right">
        <div style="text-align: center;height: 100%">
            <button class="button button-clear icon ion-trash-a" ng-click="shanchu(indeximg)">
            </button>
        </div>
    </ion-nav-buttons>
    <div class="backdrop visible active" ng-if="isshow" style="height: 30px;background-color: #444">
    	<div>
    		<span class="icon  ion-android-arrow-back yulanback"  ng-click="goBack()"></span>
    		<span style="color: white;font-size: 1.5em;padding:5px;margin-left: 30%;">{{(indeximg+1)+'/'+listimg.length}}</span>
    		<span class="icon ion-trash-a yulandelete" ng-click="shanchu(indeximg)"></span>
    	</div>
    </div>
	<ion-content style="background: black;">
	
	<div class="tcyulanimg" style="width: 100%;">
       <img ng-if="list.length>0" alt="" ng-src="{{listimg[indeximg]}}" style="margin-top:35px;width: 100%;objec-fit: contain" on-swipe-right="shangyiye()" on-swipe-left="xiayiye()" ng-click="showtitle()">
       </div>
    </ion-content>
</ion-view>

