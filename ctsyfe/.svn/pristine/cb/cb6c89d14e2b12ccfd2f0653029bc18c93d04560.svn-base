<ion-view hide-nav-bar="isIos" view-title="会员中心" class="hytd">
    <ion-nav-buttons side="left">
        <div style="text-align: center; height: 100%">
            <button class="button button-clear icon ion-chevron-left" ng-click="goBack()"></button>
        </div>
    </ion-nav-buttons>
    <ion-nav-buttons side="right">

    </ion-nav-buttons>
    <style type="text/css">
        .hytd ul {
            margin-bottom: 10px;
        }

        .huiyuanli {
            background-color: white;
            padding: 15px 10px;
            border: 1px solid #ddd;
            border-width: 0 0 1px 0;
        }

        .hytd ul li.huiyuanli:last-child {
            border: none;
        }

        .huiyuanli .icon {
            color: #999;
        }

        .huiyuanli .iconfont {
            color: #FFF;
        }

        .hytd .toggle input:checked+.track {
            border-color: #00C6FE;
            background-color: #00C6FE;
        }

        .hytd ul li.huiyuanli:last-child {
            border-bottom-width: 1px;
        }

        .huiyuanli .i-bg {
            margin: 0 10px 0 0;
            display: inline-block;
            vertical-align: middle;
            text-align: center;
            height: 26px;
            width: 26px;
            border-radius: 26px;
            color: #FFF;
        }

        .hytd mark {
            font-size: 12px;
            color: #999;
            background-color: #FFF;
        }

        .huiyuani {
            font-size: 16px;
            line-height: 26px;
            align-self: center;
        }

        .huiyuaniright {
            align-self: center;
            float: right;
            /* margin-right: 10px; */
            font-size: 22px;
        }

        .huiyuanspan {
            white-space: normal;
            align-self: center;
            font-size: 14px;
            color: #333;
        }

        .item-toggle .toggle {
            top: 0px;
        }

        .toggle-small.item-toggle .toggle {
            top: 9px;
        }

        .huiyuannicheng {
            text-align: center;
            width: 100%;
            top: 67%;
            position: absolute;
            padding-top: 20px;
            font-size: 1.3em;
            color: white;
        }

        .huiyuankaiguan {
            width: 10%;
            float: right;
            margin-top: -4px;
            border: 0px;
            margin-right: -10px;
        }

        .huiyuantxdiv {
            border-radius: 50%;
            background-color: white;
            height: 100px;
            width: 100px;
            display: block;
            text-align: center;
            position: absolute;
            top: 30%;
            left: 50%;
            margin-top: -30px;
            margin-left: -50px;
            padding: 10px;
            background-size: cover;
            background-position: center;
        }

        .huiyuanbjdiv {
            height: 25%;
            background-image: url(img/huiyuantd.jpg);
            position: relative;
            background-size: cover;
            background-position: center;
        }

        .top {
            position: relative;
            line-height: 0;
        }

        .top>img.bg {
            width: 100%;
            height: auto;
        }

        #u-info {
            display: flex;
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            line-height: 1.5;
            align-items: center;
            color: #FFF;
            padding: 0 10px;
        }

        #u-info img {
            height: 60px;
            width: 60px;
            border-radius: 50%;
        }

        #u-info .info {
            margin-left: 10px;
            display: inline-block;
        }

        #u-info p {
            font-size: 16px;
            font-weight: bold;
            margin: 0;
        }

        #u-info p i {
            margin: 0 10px;
        }

        #u-info span {
            font-size: 12px;
        }
        .reddianall{
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: red;
            position: absolute;
            left: 24px;
            top: 14px;
        }
    </style>

    <ion-content style="background: #f5f5f5;">
        <div class="top">
            <img src="img/hyzx-banner.png" class="bg">
            <div id="u-info" ng-click="gotoInfoEdit()">
                <img src="{{imgurl}}" class="tx">
                <div class="info">
                    <p>{{nicheng}}<i class="icon iconfont icon-icon_bianji"></i></p>
                    <span>{{gxqm}}</span>
                </div>
            </div>
        </div>
        <div>
            <ul class="list">
                <li class="huiyuanli" ng-click="gomyMessage()">
                    <span class="i-bg" style="background-color: #00b5ee;">
                        <i class="icon iconfont icon-wodexiaoxi huiyuani"></i>
                        <div class="reddianall" ng-if='havenewmessage'></div>
                    </span>

                    <span class="huiyuanspan">我的消息
                        <!-- <mark>(危急症状消息提醒)</mark> -->
                    </span>
                    <i class="icon  ion-ios-arrow-right huiyuaniright"></i>
                </li>
                <li class="huiyuanli" ng-click="wdsc()">
                    <span class="i-bg" style="background-color:#FF9600;">
                        <i class="icon iconfont icon-icon_shoucang huiyuani"></i>
                    </span>

                    <span class="huiyuanspan">我的收藏
                    </span>
                    <i class="icon ion-ios-arrow-right huiyuaniright"></i>
                </li>
``
            </ul>
            <ul class="list">
                <li class="huiyuanli" ng-click="jtjkda()">
                    <span class="i-bg" style="background-color: #00D642;">
                        <i class="icon iconfont icon-jiatingjiankangdangan huiyuani"></i>
                    </span>
                    <span class="huiyuanspan">家庭健康档案</span>
                    <i class="icon  ion-ios-arrow-right huiyuaniright"></i>
                </li>
            </ul>
            <ul class="list">
                <li class="huiyuanli" ng-click="guanyu()">
                    <span class="i-bg" style="background-color: #1CBD9C;">
                        <i class="icon iconfont icon-yunqizhishi huiyuani"></i>
                    </span>
                    <span class="huiyuanspan">关于我们</span>
                    <i class="icon ion-ios-arrow-right huiyuaniright"></i>
                </li>
            </ul>
            <ul style="display: none;" class="list">
                <li class="huiyuanli" ng-click="tucao()">
                    <span class="i-bg" style="background-color: #FFA861;">
                        <i class="icon iconfont icon-woyaotucao huiyuani"></i>
                    </span>

                    <span class="huiyuanspan">我要吐槽</span>
                    <i class="icon ion-ios-arrow-right huiyuaniright"></i>
                </li>
            </ul>
            <ul style="display: none;" class="list">
                <li class="huiyuanli">
                    <span class="i-bg" style="background-color: #00CEBC;">
                        <i class="icon iconfont icon-yinpinkaiguan huiyuani"></i>
                    </span>

                    <span class="huiyuanspan">语音播报</span>
                    <ion-toggle ng-model="yuyin.value" class="huiyuankaiguan" ng-change="yuyinclick(yuyin.value)"></ion-toggle>
                </li>
                <li class="huiyuanli" ng-click="guanyu()">
                    <span class="i-bg" style="background-color: #00B5EE;">
                        <i class="icon iconfont icon-guanyuwomen huiyuani"></i>
                    </span>
                    <span class="huiyuanspan">关于我们</span>
                    <i class="icon  ion-ios-arrow-right huiyuaniright"></i>
                </li>
            </ul>
        </div>

    </ion-content>
