<ion-view hide-nav-bar="isIos" view-title="{{title}}" class="mymessage">
    <ion-nav-buttons side="left">
        <button class="button button-clear icon ion-chevron-left" ng-click="goBack()"></button>
    </ion-nav-buttons>
    <style>
        .mymessage li {
            position: relative;
            align-items: center;
            padding: 10px 10px 0 10px;
        }

        .mymessage li .tb {
            position: absolute;
            width: 25px;
            height: 25px;
            color: #fff;
            text-align: center;
            border-radius: 50%;

        }

        .mymessage li .tb i {
            line-height: 25px;
            font-size: 20px;
        }
        .mingcheng{
            margin-left: 10%;
            margin-top: 10px;
        }
        .message{
            width: 72%;
            background: #FFFFFF;
            margin-left: 10%;
            margin-top: 10px;
            padding: 15px;
        }
        .jkqtime{
            text-align: center;
            /* width: 100%; */
            margin-top: 40px;
            height: 40px;
        }
        .jkqtime span{
            background:#C6C6C6;
            padding: 7px;
            font-size: 14px;
            color: white;
        }
    </style>
    <ion-content style="background:#F5F5F5">
        <ul>
            <li class="link-item" ng-if="type=='jkq'" ng-repeat="item in jkqlist track by $index">
                <div class="tb" style="background-color:#00b5ee;">
                    <i class="icon-pyq"></i>
                </div>
                <span class="mingcheng" ng-if="item.hflx=='hf'">回复消息</span>
                <span class="mingcheng" ng-if="item.hflx=='pl'">评论消息</span>
                <div class="message" ng-click = "gojkqdeiles(item.tId)">
                    <span style="display:block" ng-if="item.hflx=='hf'">@{{item.username}}回复了你的帖子：</span>
                    <span style="display:block" ng-if="item.hflx=='pl'">@{{item.username}}回复了你的消息：</span>
                    <span>{{item.hfnr | getnewmessage}}</span>
                </div>
                <div class="jkqtime">
                    <span>{{item.hfsj}}</span>
                </div>
            </li>
            <li class="link-item" ng-if="type=='bgtx'" ng-repeat="item in bgtxlist track by $index">
                <div class="tb" style="background-color:#00b5ee;">
                    <i class="icon-pyq"></i>
                </div>
                <span class="mingcheng">系统消息</span>
                <div class="message" ng-click = "gobgtxdeiles(item.pid)" >
                    <span>您有一份报告结果待确认！</span>
                </div>
                <div class="jkqtime">
                    <span>{{item.updateTime}}</span>
                </div>
            </li>
        </ul>
    </ion-content>
</ion-view>