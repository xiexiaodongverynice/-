	padding: 15px 0;
}
/*查询没有没有返回值时的提示框样式*/
.popup-body span {
	text-align: -webkit-center;
	width: 100%;
	margin: 7px auto;
	display: inline-block;
}

.popup-head {
	background-color: #18b4ed;
}

