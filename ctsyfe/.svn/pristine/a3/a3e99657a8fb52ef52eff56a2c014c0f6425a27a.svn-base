<ion-nav-buttons side="left">
<div style="text-align: center;">
	<button class="button button-clear icon ion-chevron-left"
		ng-click="goBack()"></button>
</div>
</ion-nav-buttons>
<nav class="titleBox" ng-style="{top:(isIos)? '0': '44px'}" >
	<div style="background-image: none;top:2px; overflow:visible" class="bar item-input-inset">
		<div class="item-input-wrapper">
			<button ng-click="searchDrug()" type="button" name=""
				class="button button-clear ion-android-search"
				style="color: #ccc; font-size: 25px; height: 28px;padding-top: 2px; "></button>
			<input ng-model="data.keyword" ng-change="searchDrug()" type="search"
				ng-class="{true: 'inputIos',false: ''}[isIos]"
				placeholder="请输入疾病名称"> <i ng-click="clean()"
				ng-class="[data.keyword ? 'visible-im' : '','button button-clear ion-close-circled']"
				style="font-size: 16px; padding-right: 8px;height:28px;line-height:28px"></i>
		</div>

		<div class="dropdown">
				<div ng-click="changeButton()" id="sortButton">
					<span ng-if="currentPx==1">全部疾病</span>
					<span ng-if="currentPx==2">常见疾病</span>
					<i class="ion-android-arrow-dropdown"></i>
				</div>
				<div class="dropdown-content" style="right: -10px; top: 30px;" ng-class="{true:'tabClick',false:''}[isShowPx]">
					<div style="margin-left: 27px;margin-top: -29px;width:0px;height:0px;border-width: 10px;border-style: solid;border-color: white transparent transparent;transform: rotate(180deg);"></div>
					<ul>
						<li ng-click="menuSearch(1)" ng-class="{true:'chooseCurrent',false:'notChoose'}[currentPx == 1]">全部疾病</li>
						<li ng-click="menuSearch(2)" ng-class="{true:'chooseCurrent',false:'notChoose'}[currentPx == 2]">常见疾病</li>
					</ul>
				</div>
			</div>		
	</div>
