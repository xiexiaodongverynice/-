<ion-content delegate-handle="dashboard" ng-style="{top:(isIos)? '45px': '89px'}">
 <ion-refresher on-refresh="micRefresh()" pulling-text="下拉刷新..." refreshing-icon="ion-loading-c"> </ion-refresher>
<ul>
