<ion-view hide-nav-bar="isIos" view-title="用药指南" class="yyzn">
    <ion-nav-buttons side="left">
        <div style="text-align: center; height: 100%">
            <button class="button button-clear icon ion-chevron-left" ng-click="back()"></button>
        </div>
    </ion-nav-buttons>
    <style>
        .yyzn ion-content {
            background: #F6F6F6;
        }

        .yyzn .i_tuBiao {
            font-size: 20px;
            color: #00b5ee;
            margin-right: 15px;

        }

        .yyzn .body {
            margin-top: -50px;
        }

        .yyzn .zy-item {
            position: relative;
            width: 90%;
            background: #fff;
            border-radius: 15px;
            margin: 20px auto;

        }

        .div-wod {
            width: 100%;
            align-items: center;
            display: inline-flex;
        }

        .yyzn .img {
            flex-basis: 75px;
            margin-left: 15px;
            margin-right: 10px;
            margin-top: 18px;
            margin-bottom: 18px;
        }

        .yyzn .img-sty {
            display: inline-block;
            width: 50px;
            height: 50px;
            color: #fff;
            text-align: center;
            margin:0;
            border-radius: 50%;
        }

        .yyzn .img-sty.img1 {
            background-color: #FFB356;
        }

        .yyzn .img-sty.img2 {
            background-color: #4AA1FE;
        }

        .yyzn .img-sty.img3 {
            background-color: #00C582;
        }

        .yyzn .img-sty i {
            font-size: 25px;
            margin: auto;
            line-height: 50px;
        }

        .yyzn .p-sty {
            font-size: 14px;
            color: #666;
            width: 100%;
            line-height: 1.8;
            margin: 0;
        }

        .yyzn span.p-title {
            font-size: 16px;
            color: #333;
            display: block;
            font-weight: bold;

        }
    </style>
    <ion-content>
        <div class="header-top">
            <img class="imgstyle" src="img/ypzn-banner.png">
        </div>
        <div class="body">

            <div class="zy-item" ng-click="goJtyy()">
                <div class="div-wod">
                    <div class="img">
                        <span class="img-sty img1"><i class="icon iconfont icon-jiatingchangyongyao"></i></span>
                    </div>
                    <p class="p-sty">
                        <span class="p-title">家庭用药</span>
                        <span>家庭常用药快速查询</span>
                    </p>
                    <i class="icon iconfont icon-right_fill i_tuBiao "></i>
                </div>
            </div>
            <div class="zy-item" ng-click="goYpk()">
                <div class="div-wod">
                    <div class="img">
                        <span class="img-sty img2"><i class="icon iconfont icon-anxitongzhaoyaoicon"></i></span>
                    </div>
                    <p class="p-sty">
                        <span class="p-title">药品库</span>
                        <span>药品库</span>
                    </p>
                    <i class="icon iconfont icon-right_fill i_tuBiao "></i>
                </div>
            </div>
            <div class="zy-item">
                <div class="div-wod">
                    <div class="img">
                    <span class="img-sty img3"><i class="icon iconfont icon-yaopinzhinan"></i></span>
                    </div>
                    <p class="p-sty"><span class="p-title">安全用药</span>
                        <span>合理用药指导</span>
                    </p>
                    <i class="icon iconfont icon-right_fill i_tuBiao"></i>
                </div>
            </div>
        </div>
    </ion-content>
</ion-view>